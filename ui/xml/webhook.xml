<?xml version="1.0" encoding="utf-8"?>
<DocuSignEnvelopeInformation
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.docusign.net/API/3.0">
  <EnvelopeStatus>
    <RecipientStatuses>
      {{range .Recipients}}
      <RecipientStatus>
        <Signed>{{.Signed}}</Signed>
        <CustomFields>
          <CustomField>{{.ID}}</CustomField>
        </CustomFields>
      </RecipientStatus>
      {{end}}
    </RecipientStatuses>
    <EnvelopeID>{{.EnvelopeID}}</EnvelopeID>
    <DocumentStatuses>
      {{range .Documents}}
      <DocumentStatus>
        <ID>{{.ID}}</ID>
        <Name>{{.Name}}</Name>
        <DocumentFields>
          <DocumentField>
            <Name>original-filename</Name>
            <Value>{{.Name}}</Value>
          </DocumentField>
        </DocumentFields>
      </DocumentStatus>
      {{end}}
    </DocumentStatuses>
  </EnvelopeStatus>
  <DocumentPDFs>
    {{range .Documents}}
    <DocumentPDF>
      <Name>{{.Name}}</Name>
      <DocumentID>{{.ID}}</DocumentID>
      <PDFBytes>{{.PDFBytes}}</PDFBytes>
    </DocumentPDF>
    {{end}}
  </DocumentPDFs>
</DocuSignEnvelopeInformation>
